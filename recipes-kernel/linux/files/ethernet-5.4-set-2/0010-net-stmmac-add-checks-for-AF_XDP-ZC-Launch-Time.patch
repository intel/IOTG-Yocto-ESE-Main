+		    priv->plat->tx_queues_cfg[xdp_q->queue_index].tbs_en &&
+		    desc.txtime > 0) {
 			if (stmmac_set_tbs_launchtime(priv, tx_desc,
 						      desc.txtime)) {
 				netdev_warn(priv->dev, "Launch time setting"
