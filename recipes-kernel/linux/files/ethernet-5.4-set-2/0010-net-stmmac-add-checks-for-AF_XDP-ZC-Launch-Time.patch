@@ -730,7 +730,9 @@ static bool stmmac_xmit_zc(struct stmmac_tx_queue *xdp_q, unsigned int budget)
 
 		stmmac_set_desc_addr(priv, tx_desc, dma);
 
-		if (stmmac_enabled_xdp(priv) && desc.txtime > 0) {
