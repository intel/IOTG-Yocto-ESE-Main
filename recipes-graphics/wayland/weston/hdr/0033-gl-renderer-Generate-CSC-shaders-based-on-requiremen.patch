+++ b/libweston/renderer-gl/meson.build
@@ -7,6 +7,8 @@ config_h.set('ENABLE_EGL', '1')
 srcs_renderer_gl = [
 	'gl-renderer.c',
 	'gl-shaders.c',
+	'../../shared/colorspace.c',
+	'../../shared/csc.c',
 	linux_dmabuf_unstable_v1_protocol_c,
 	linux_dmabuf_unstable_v1_server_protocol_h,
 ]
